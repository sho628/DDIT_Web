	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>kr.or.ddit.mvc.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>FilterDesc</filter-name>
		<filter-class>kr.or.ddit.filter.FilterDesc</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FilterDesc</filter-name>
		<url-pattern>/*</url-pattern>	
	</filter-mapping>
	<filter>
		<filter-name>MultipartFilter</filter-name>
		<filter-class>kr.or.ddit.mvc.fileupload.MultipartFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MultipartFilter</filter-name>
		<url-pattern>*.do</url-pattern>		
	</filter-mapping>
	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>kr.or.ddit.mvc.FrontController</servlet-class>
		<init-param>
			<param-name>basePackages</param-name>
			<param-value>kr.or.ddit</param-value>
		</init-param>
		<init-param>
			<param-name>prefix</param-name>
			<param-value>/WEB-INF/views/</param-value>
		</init-param>
		<init-param>
			<param-name>suffix</param-name>
			<param-value>.jsp</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<multipart-config />
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
</web-app>













